{
  "name": "markdown-set-web-image-size",
  "displayName": "Markdown Set Web Image Size",
  "description": "A VS Code extension to fetch and set web image sizes in Markdown files.",
  "version": "0.0.1",
  "publisher": "chenennan",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:extension.getImageSizes"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.getImageSizes",
        "title": "Markdown: 设置外链图片尺寸"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.getImageSizes",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.getImageSizes",
        "key": "ctrl+alt+s",
        "when": "editorLangId == markdown"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "image-size": "^1.1.1"
  }
}